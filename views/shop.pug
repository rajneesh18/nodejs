extends layouts/main-layout.pug

block styles
    link(rel="stylesheet" href="/css/main.css")

block content
    main
        if prods.length > 0
            .grid
                each product in prods
                    article.card.product-item
                        header.card_header
                            h1.product_title #{product.title}
                        .card_image
                            img(src="https://cdn.pixabay.com/photo/2016/03/31/20/51/book-1296045_960_720.png" alt="A Great Book")
                        .card_content
                            h2.product_price $19.99
                            p.product_description A very interesting book about so many even more interesting things!
                        .card_actions
                            button.btn Add to Cart
        else
            h1 No Products
