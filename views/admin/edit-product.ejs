<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="css/product.css">
</head>

<body>
<%- include('../includes/navigation.ejs') %>
<div class="ui container">
    <form class="ui form" action="/admin/<% if(editing) { %>edit-product<% } else { %>add-product<% } %>" method="POST">
        <div class="field">
            <label for="title">Title</label>
            <input type="text" name="title" id="title" placeholder="Title" value="<% if(editing) { %><%=product.title%><% } %>" />
        </div>
        <div class="field">
            <label for="imageUrl">Image URL</label>
            <input type="text" name="imageUrl"  id="imageUrl" placeholder="Image URL" value="<% if(editing) { %><%=product.imageUrl%><% } %>" />
        </div>
        <div class="field">
            <label for="price">Price</label>
            <input type="number" name="price"  id="price" placeholder="Price" value="<% if(editing) { %><%=product.price%><% } %>"/>
        </div>
        <div class="field">
            <label for="description">Description</label>
            <textarea name="description" id="description" rows="5"><% if(editing) { %><%=product.description%><% } %></textarea>
        </div>
        <% if(editing) { %>
            <input type="hidden" name="productId" value="<%= product._id %>" />
        <% } %>
        <button class="ui button" type="submit"><% if(editing) { %> Edit <% } else { %> Add <% } %> Product</button>
    </form>
</div>

<%- include('../includes/end.ejs') %>