<body>
    <%- include('../includes/navigation.ejs') %>
    <% if (orders.length <= 0) { %>
        <h2>Nothing there!</h2>
    <% } else { %>
        <ul>
            <% orders.forEach(order => { %>
                <li>
                    <h1># <%= order._id %></h1>
                    <ul>
                        <% order.items.forEach( product => { %>
                            <li><%= product.title %> ( <%= product.quantity %> ) </li>
                        <% }) %>
                    </ul>
                </li>
            <% }); %>
        </ul>
    <% } %>
